<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_post">

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.example.assignment.ui.PostFragment"
        tools:layout="@layout/fragment_post" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.assignment.ui.MapFragment"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.assignment.ui.AddFragment"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_navigation_add_to_navigation_post"
            app:destination="@id/navigation_post" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.assignment.ui.NotificationsFragment"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.assignment.ui.ProfileFragment"
        tools:layout="@layout/fragment_profile" />

</navigation>